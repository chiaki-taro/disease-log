<header class='top-page-header'>
  <div class='header-left'>
    <%= link_to "Disease Log", "/" %>
  </div>
  <div class='header-right'>
    <% if user_signed_in? %>
      <div><%= link_to 'Log out', destroy_user_session_path, data: {turbo_method: :delete}, class: "logout" %></div>
    <% else %>
      <div><%= link_to 'Log in', new_user_session_path, class: "login" %></div>
      <div><%= link_to 'Sign up', new_user_registration_path, class: "sign-up" %></div>
    <% end %>
  </div>
</header>