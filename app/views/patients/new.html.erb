<%= render "shared/header" %>

<div class="patient-contents">
  <div class="add-patient-main">
    <h2 class="add-patient-title">患者さん登録</h2>
    <%# 患者さん登録フォーム %>
    <%= form_with model: [@user, @patient], local: true do |f| %>
      <div class="patient_name-text">
        患者さんのお名前
      </div>
      <%= f.text_area :patient_name, class:"patient_name", placeholder:"お名前を入力してください", style: "width: 350px;" %>

      <div class="patient_sex-text">
        性別
      </div>
      <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"sex-select"}) %>

      <div class="patient_birthday-text">
        生年月日
      </div>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
      <%= f.submit "患者さん登録" ,class:"btn" %>
    <% end %>
    <%# 患者さん登録フォーム %>
  </div>
</div>